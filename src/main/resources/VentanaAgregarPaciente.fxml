<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" prefHeight="700.0" prefWidth="700.0" spacing="20.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.javafx.Interface.controladorAgregarPaciente">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <children>
      <!-- Titulo -->
      <Label fx:id="lblTituloVentana" text="Cambiar datos paciente" />
      
      <!-- Separador -->
      <Separator />
      
      <!-- HBox Principal 1: Datos y Foto -->
      <HBox alignment="TOP_LEFT" spacing="20.0" VBox.vgrow="ALWAYS">
         <children>
            <!-- VBox Datos (columna izquierda) -->
            <VBox alignment="TOP_LEFT" prefWidth="450.0" spacing="10.0">
               <children>
                  <!-- Nombre -->
                  <HBox alignment="CENTER_LEFT" spacing="10.0">
                     <children>
                        <Label prefWidth="180.0" text="Nombre:" />
                        <TextField fx:id="txtNombre" prefWidth="250.0" promptText="Introduce el nombre" />
                     </children>
                  </HBox>
                  
                  <!-- Apellidos -->
                  <HBox alignment="CENTER_LEFT" spacing="10.0">
                     <children>
                        <Label prefWidth="180.0" text="Apellidos:" />
                        <TextField fx:id="txtApellidos" prefWidth="250.0" promptText="Introduce los apellidos" />
                     </children>
                  </HBox>
                  
                  <!-- Edad -->
                  <HBox alignment="CENTER_LEFT" spacing="10.0">
                     <children>
                        <Label prefWidth="180.0" text="Edad:" />
                        <Spinner fx:id="spinnerEdad" editable="true" prefWidth="100.0" />
                     </children>
                  </HBox>
                  
                  <!-- Email -->
                  <HBox alignment="CENTER_LEFT" spacing="10.0">
                     <children>
                        <Label prefWidth="180.0" text="Email:" />
                        <TextField fx:id="txtEmail" prefWidth="250.0" promptText="ejemplo@correo.com" />
                     </children>
                  </HBox>
                  
                  <!-- Telefonos -->
                  <HBox alignment="CENTER_LEFT" spacing="10.0">
                     <children>
                        <Label prefWidth="180.0" text="Teléfonos:" />
                        <TextField fx:id="txtTelefono1" prefWidth="110.0" promptText="Teléfono 1" />
                        <Separator orientation="VERTICAL" prefHeight="25.0" />
                        <TextField fx:id="txtTelefono2" prefWidth="110.0" promptText="Teléfono 2" />
                     </children>
                  </HBox>
                  
                  <!-- Numero Seguridad Social -->
                  <HBox alignment="CENTER_LEFT" spacing="10.0">
                     <children>
                        <Label prefWidth="180.0" text="Nº Seguridad Social:" />
                        <TextField fx:id="txtNSS" prefWidth="250.0" promptText="Número de la seguridad social" />
                     </children>
                  </HBox>
                  
                  <!-- DNI -->
                  <HBox alignment="CENTER_LEFT" spacing="10.0">
                     <children>
                        <Label prefWidth="180.0" text="DNI:" />
                        <TextField fx:id="txtDNI" prefWidth="250.0" promptText="Introduce el DNI" />
                     </children>
                  </HBox>
                  
                  <!-- Direccion -->
                  <HBox alignment="CENTER_LEFT" spacing="10.0">
                     <children>
                        <Label prefWidth="180.0" text="Dirección:" />
                        <TextField fx:id="txtDireccion" prefWidth="250.0" promptText="Introduce la dirección" />
                     </children>
                  </HBox>
                  
                  <!-- Estado del paciente -->
                  <VBox spacing="5.0">
                     <children>
                        <Label text="Estado del paciente:" />
                        <TextArea fx:id="txtAreaEstado" prefHeight="80.0" prefWidth="430.0" promptText="Describe el estado actual del paciente" wrapText="true" />
                     </children>
                  </VBox>
                  
                  <!-- Discapacidad -->
                  <HBox alignment="CENTER_LEFT" spacing="10.0">
                     <children>
                        <Label prefWidth="180.0" text="Discapacidad:" />
                        <TextField fx:id="txtDiscapacidad" prefWidth="250.0" promptText="Introduce la discapacidad" />
                     </children>
                  </HBox>
                  
                  <!-- Protesis -->
                  <HBox alignment="CENTER_LEFT" spacing="10.0">
                     <children>
                        <Label prefWidth="180.0" text="Prótesis:" />
                        <RadioButton fx:id="radioProtesisSi" text="Sí">
                           <toggleGroup>
                              <ToggleGroup fx:id="grupoProtesis" />
                           </toggleGroup>
                        </RadioButton>
                        <RadioButton fx:id="radioProtesisNo" selected="true" text="No" toggleGroup="$grupoProtesis" />
                     </children>
                  </HBox>
                  
                  <!-- Tratamiento -->
                  <VBox spacing="5.0">
                     <children>
                        <Label text="Tratamiento:" />
                        <TextArea fx:id="txtAreaTratamiento" prefHeight="60.0" prefWidth="430.0" promptText="Describe el tratamiento del paciente" wrapText="true" />
                     </children>
                  </VBox>
                  
                  <!-- Informe -->
                  <HBox alignment="CENTER_LEFT" spacing="10.0">
                     <children>
                        <Label prefWidth="180.0" text="Informe:" />
                        <Button fx:id="btnImportarInforme" onAction="#importarInformePDF" prefWidth="150.0" text="Importar PDF" />
                     </children>
                  </HBox>
               </children>
            </VBox>
            
            <!-- VBox Foto (columna derecha) -->
            <VBox alignment="TOP_CENTER" prefWidth="200.0" spacing="10.0">
               <children>
                  <Label text="Foto del paciente" />
                  <ImageView fx:id="imgFotoPaciente" fitHeight="200.0" fitWidth="180.0" preserveRatio="true" />
                  <Button fx:id="btnAgregarFoto" onAction="#agregarFotoPaciente" text="Agregar Foto" />
               </children>
            </VBox>
         </children>
      </HBox>
      
      <!-- Separador -->
      <Separator />
      
      <!-- HBox Principal 2: Botones -->
      <HBox alignment="CENTER" spacing="10.0">
         <children>
            <Button fx:id="btnCancelar" onAction="#cerrarVentana" prefWidth="120.0" text="Cancelar" />
            <Button fx:id="btnGuardar" onAction="#guardarPaciente" prefWidth="120.0" text="Guardar" />
         </children>
      </HBox>
   </children>
</VBox>
