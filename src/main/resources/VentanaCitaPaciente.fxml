<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" prefHeight="500.0" prefWidth="650.0" spacing="20.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.javafx.Interface.controladorCitaPaciente">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <children>
      <!-- Titulo -->
      <Label fx:id="lblTituloVentana" text="Cita del paciente" />
      
      <!-- Separador -->
      <Separator />
      
      <!-- HBox Principal 1: Datos y Foto -->
      <HBox alignment="TOP_LEFT" spacing="20.0" VBox.vgrow="ALWAYS">
         <children>
            <!-- VBox Datos (columna izquierda) -->
            <VBox alignment="TOP_LEFT" prefWidth="400.0" spacing="10.0">
               <children>
                  <!-- Nombre -->
                  <HBox alignment="CENTER_LEFT" spacing="10.0">
                     <children>
                        <Label prefWidth="180.0" text="Nombre:" />
                        <Label fx:id="lblNombreValor" prefWidth="200.0" />
                     </children>
                  </HBox>
                  
                  <!-- Apellidos -->
                  <HBox alignment="CENTER_LEFT" spacing="10.0">
                     <children>
                        <Label prefWidth="180.0" text="Apellidos:" />
                        <Label fx:id="lblApellidosValor" prefWidth="200.0" />
                     </children>
                  </HBox>
                  
                  <!-- DNI -->
                  <HBox alignment="CENTER_LEFT" spacing="10.0">
                     <children>
                        <Label prefWidth="180.0" text="DNI:" />
                        <Label fx:id="lblDNIValor" prefWidth="200.0" />
                     </children>
                  </HBox>
                  
                  <!-- Numero Seguridad Social -->
                  <HBox alignment="CENTER_LEFT" spacing="10.0">
                     <children>
                        <Label prefWidth="180.0" text="NÂº Seguridad Social:" />
                        <Label fx:id="lblNSSValor" prefWidth="200.0" />
                     </children>
                  </HBox>
                  
                  <!-- Edad -->
                  <HBox alignment="CENTER_LEFT" spacing="10.0">
                     <children>
                        <Label prefWidth="180.0" text="Edad:" />
                        <Label fx:id="lblEdadValor" prefWidth="200.0" />
                     </children>
                  </HBox>
                  
                  <!-- Hora -->
                  <HBox alignment="CENTER_LEFT" spacing="10.0">
                     <children>
                        <Label prefWidth="180.0" text="Hora:" />
                        <Label fx:id="lblHoraValor" prefWidth="200.0" />
                     </children>
                  </HBox>
                  
                  <!-- Fecha -->
                  <HBox alignment="CENTER_LEFT" spacing="10.0">
                     <children>
                        <Label prefWidth="180.0" text="Fecha:" />
                        <Label fx:id="lblFechaValor" prefWidth="200.0" />
                     </children>
                  </HBox>
                  
                  <!-- Informe -->
                  <HBox alignment="CENTER_LEFT" spacing="10.0">
                     <children>
                        <Label prefWidth="180.0" text="Informe:" />
                        <Button fx:id="btnDescargarInforme" onAction="#descargarInformePDF" prefWidth="150.0" text="Descargar PDF" />
                     </children>
                  </HBox>
               </children>
            </VBox>
            
            <!-- VBox Foto (columna derecha) -->
            <VBox alignment="TOP_CENTER" prefWidth="200.0" spacing="10.0">
               <children>
                  <Label text="Foto del paciente" />
                  <ImageView fx:id="imgFotoPaciente" fitHeight="200.0" fitWidth="180.0" preserveRatio="true" />
               </children>
            </VBox>
         </children>
      </HBox>
      
      <!-- Separador -->
      <Separator />
      
      <!-- HBox Principal 2: Botones -->
      <HBox alignment="CENTER" spacing="10.0">
         <children>
            <Button fx:id="btnBorrar" onAction="#borrarCita" prefWidth="120.0" text="Borrar" />
            <Button fx:id="btnCambiar" onAction="#cambiarCita" prefWidth="120.0" text="Cambiar" />
            <Button fx:id="btnAceptar" onAction="#cerrarVentana" prefWidth="120.0" text="Aceptar" />
         </children>
      </HBox>
   </children>
</VBox>
