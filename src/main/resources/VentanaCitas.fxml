<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.StackPane?>

<VBox fx:id="vboxContenedorPrincipal" prefHeight="700.0" prefWidth="1100.0" spacing="15.0" styleClass="root" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.javafx.Interface.controladorVentanaCitas">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <!-- Titulo -->
        <Label fx:id="lblTituloPestania" styleClass="label-titulo" text="Gestión de Citas" />

        <Separator />

        <!-- Contenido principal -->
        <HBox spacing="20.0" VBox.vgrow="ALWAYS">
            <children>
                <!-- Columna izquierda: Calendario y lista de citas -->
                <VBox prefWidth="720.0" spacing="10.0" HBox.hgrow="ALWAYS">
                    <children>
                        <!-- Contenedor para calendario personalizado -->
                        <HBox spacing="10.0" alignment="CENTER_LEFT">
                            <children>
                                <Label style="-fx-font-weight: bold;" text="Calendario:" />
                                <Button fx:id="btnHoy" onAction="#irAHoy" text="Hoy" styleClass="button-primario" />
                                <Button fx:id="btnVerTodas" onAction="#verTodasLasCitas" text="Ver todas las citas" />
                            </children>
                        </HBox>
                        
                        <!-- Contenedor donde se insertará el calendario CalendarFX -->
                        <StackPane fx:id="contenedorCalendario" prefHeight="350.0" minHeight="320.0" VBox.vgrow="SOMETIMES">
                        </StackPane>

                        <Separator />

                        <!-- Tabla de citas -->
                        <Label style="-fx-font-weight: bold;" text="Citas del día seleccionado:" />

                        <TableView fx:id="tblCitas" prefHeight="200.0" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="colFecha" minWidth="90.0" text="Fecha" />
                                <TableColumn fx:id="colHora" minWidth="60.0" text="Hora" />
                                <TableColumn fx:id="colPaciente" minWidth="180.0" text="Paciente" />
                                <TableColumn fx:id="colDNIPaciente" minWidth="100.0" text="DNI Paciente" />
                                <TableColumn fx:id="colSanitario" minWidth="150.0" text="Sanitario" />
                            </columns>
                        </TableView>

                        <!-- Botones de accion -->
                        <HBox alignment="CENTER_RIGHT" spacing="10.0">
                            <children>
                                <Button fx:id="btnEliminarCita" onAction="#eliminarCitaSeleccionada" prefWidth="100.0" styleClass="button-peligro" text="Eliminar" />
                                <Button fx:id="btnVerCita" onAction="#verCitaSeleccionada" prefWidth="100.0" styleClass="button-primario" text="Ver cita" />
                            </children>
                        </HBox>
                    </children>
                </VBox>

                <!-- Separador vertical -->
                <Separator orientation="VERTICAL" />

                <!-- Columna derecha: Nueva cita -->
                <VBox prefWidth="380.0" spacing="15.0">
                    <children>
                        <Label styleClass="label-titulo" text="Nueva Cita" />

                        <Separator />

                        <!-- DNI Paciente -->
                        <VBox spacing="5.0">
                            <children>
                                <Label text="DNI del Paciente:" />
                                <HBox alignment="CENTER_LEFT" spacing="10.0">
                                    <children>
                                        <TextField fx:id="txtDNIPaciente" prefWidth="150.0" promptText="12345678X" />
                                        <Button fx:id="btnBuscarPaciente" onAction="#buscarPaciente" text="Buscar" />
                                    </children>
                                </HBox>
                                <Label fx:id="lblNombrePaciente" style="-fx-text-fill: #666666;" text="" />
                            </children>
                        </VBox>

                        <!-- Fecha de la cita (usa la fecha seleccionada en el calendario) -->
                        <VBox spacing="5.0">
                            <children>
                                <Label text="Fecha de la cita:" />
                                <Label fx:id="lblFechaSeleccionada" style="-fx-font-weight: bold; -fx-font-size: 14px;" text="Seleccione en el calendario" />
                            </children>
                        </VBox>

                        <!-- Hora de la cita -->
                        <VBox spacing="5.0">
                            <children>
                                <Label text="Hora de la cita:" />
                                <HBox alignment="CENTER_LEFT" spacing="10.0">
                                    <children>
                                        <Spinner fx:id="spnHora" editable="true" prefWidth="80.0" />
                                        <Label text=":" />
                                        <Spinner fx:id="spnMinuto" editable="true" prefWidth="80.0" />
                                        <Label text="h" />
                                    </children>
                                </HBox>
                            </children>
                        </VBox>

                        <!-- Botones -->
                        <HBox alignment="CENTER_RIGHT" spacing="10.0">
                            <VBox.margin>
                                <Insets top="20.0" />
                            </VBox.margin>
                            <children>
                                <Button fx:id="btnRestablecer" onAction="#restablecerFormulario" prefWidth="100.0" text="Limpiar" />
                                <Button fx:id="btnAniadirCita" onAction="#aniadirCita" prefWidth="100.0" styleClass="button-primario" text="Crear cita" />
                            </children>
                        </HBox>
                    </children>
                </VBox>
            </children>
        </HBox>
    </children>
</VBox>
