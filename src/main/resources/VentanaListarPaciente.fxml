<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" prefHeight="700.0" prefWidth="700.0" spacing="20.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.javafx.Interface.controladorVentanaPacienteListar">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <!-- Titulo -->
        <Label fx:id="lblTituloVentana" styleClass="label-titulo" text="Informacion del Paciente" />

        <!-- Separador -->
        <Separator />

        <!-- HBox Principal 1: Datos y Foto -->
        <HBox alignment="TOP_LEFT" spacing="20.0" VBox.vgrow="ALWAYS">
            <children>
                <!-- VBox Datos (columna izquierda) -->
                <VBox alignment="TOP_LEFT" prefWidth="450.0" spacing="10.0">
                    <children>
                        <!-- Nombre -->
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                            <children>
                                <Label prefWidth="180.0" text="Nombre:" />
                                <Label fx:id="lblNombreValor" prefWidth="250.0" />
                            </children>
                        </HBox>

                        <!-- Apellidos -->
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                            <children>
                                <Label prefWidth="180.0" text="Apellidos:" />
                                <Label fx:id="lblApellidosValor" prefWidth="250.0" />
                            </children>
                        </HBox>

                        <!-- Edad -->
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                            <children>
                                <Label prefWidth="180.0" text="Edad:" />
                                <Label fx:id="lblEdadValor" prefWidth="250.0" />
                            </children>
                        </HBox>

                        <!-- Email -->
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                            <children>
                                <Label prefWidth="180.0" text="Email:" />
                                <Label fx:id="lblEmailValor" prefWidth="250.0" />
                            </children>
                        </HBox>

                        <!-- Telefonos -->
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                            <children>
                                <Label prefWidth="180.0" text="Telefonos:" />
                                <Label fx:id="lblTelefono1Valor" prefWidth="110.0" />
                                <Separator orientation="VERTICAL" prefHeight="20.0" />
                                <Label fx:id="lblTelefono2Valor" prefWidth="110.0" />
                            </children>
                        </HBox>

                        <!-- Numero Seguridad Social -->
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                            <children>
                                <Label prefWidth="180.0" text="N. Seguridad Social:" />
                                <Label fx:id="lblNSSValor" prefWidth="250.0" />
                            </children>
                        </HBox>

                        <!-- DNI -->
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                            <children>
                                <Label prefWidth="180.0" text="DNI:" />
                                <Label fx:id="lblDNIValor" prefWidth="250.0" />
                            </children>
                        </HBox>

                        <!-- Direccion -->
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                            <children>
                                <Label prefWidth="180.0" text="Direccion:" />
                                <Label fx:id="lblDireccionValor" prefWidth="250.0" wrapText="true" />
                            </children>
                        </HBox>

                        <!-- Estado del paciente -->
                        <VBox spacing="5.0">
                            <children>
                                <Label text="Estado del paciente:" />
                                <TextArea fx:id="txtAreaEstado" editable="false" prefHeight="80.0" prefWidth="430.0" wrapText="true" />
                            </children>
                        </VBox>

                        <!-- Discapacidad -->
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                            <children>
                                <Label prefWidth="180.0" text="Discapacidad:" />
                                <Label fx:id="lblDiscapacidadValor" prefWidth="250.0" wrapText="true" />
                            </children>
                        </HBox>

                        <!-- Protesis -->
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                            <children>
                                <Label prefWidth="180.0" text="Protesis:" />
                                <RadioButton fx:id="radioProtesisSi" disable="true" text="Si">
                                    <toggleGroup>
                                        <ToggleGroup fx:id="grupoProtesis" />
                                    </toggleGroup>
                                </RadioButton>
                                <RadioButton fx:id="radioProtesisNo" disable="true" text="No" toggleGroup="$grupoProtesis" />
                            </children>
                        </HBox>

                        <!-- Tratamiento -->
                        <VBox spacing="5.0">
                            <children>
                                <Label text="Tratamiento:" />
                                <TextArea fx:id="txtAreaTratamiento" editable="false" prefHeight="60.0" prefWidth="430.0" wrapText="true" />
                            </children>
                        </VBox>

                        <!-- Informe -->
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                            <children>
                                <Label prefWidth="180.0" text="Informe:" />
                                <Button fx:id="btnDescargarInforme" onAction="#descargarInformePDF" prefWidth="150.0" text="Descargar PDF" />
                            </children>
                        </HBox>
                    </children>
                </VBox>

                <!-- VBox Foto (columna derecha) -->
                <VBox alignment="TOP_CENTER" prefWidth="200.0" spacing="10.0">
                    <children>
                        <Label text="Foto del paciente" />
                        <ImageView fx:id="imgFotoPaciente" fitHeight="200.0" fitWidth="180.0" preserveRatio="true" />
                    </children>
                </VBox>
            </children>
        </HBox>

        <!-- Separador -->
        <Separator />

        <!-- HBox Principal 2: Botones -->
        <HBox alignment="CENTER" spacing="10.0">
            <children>
                <Button fx:id="btnEditar" onAction="#abrirVentanaEditar" prefWidth="120.0" text="Editar" />
                <Button fx:id="btnAceptar" onAction="#cerrarVentana" prefWidth="120.0" styleClass="button-primario" text="Aceptar" />
            </children>
        </HBox>
    </children>
</VBox>
