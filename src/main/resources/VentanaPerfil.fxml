<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" prefHeight="450.0" prefWidth="500.0" spacing="15.0" styleClass="root" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.javafx.Interface.controladorPerfil">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <!-- Titulo -->
        <Label fx:id="lblTitulo" styleClass="label-titulo" text="Mi Perfil" />

        <Separator />

        <!-- Contenido principal -->
        <HBox alignment="TOP_CENTER" spacing="30.0" VBox.vgrow="ALWAYS">
            <children>
                <!-- Columna izquierda: Foto -->
                <VBox alignment="TOP_CENTER" spacing="10.0">
                    <children>
                        <ImageView fx:id="imgFotoUsuario" fitHeight="150.0" fitWidth="150.0" preserveRatio="true" />
                    </children>
                </VBox>

                <!-- Columna derecha: Datos -->
                <VBox alignment="TOP_LEFT" spacing="10.0" HBox.hgrow="ALWAYS">
                    <children>
                        <!-- DNI -->
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                            <children>
                                <Label prefWidth="120.0" style="-fx-font-weight: bold;" text="DNI:" />
                                <Label fx:id="lblDNIValor" />
                            </children>
                        </HBox>

                        <!-- Nombre -->
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                            <children>
                                <Label prefWidth="120.0" style="-fx-font-weight: bold;" text="Nombre:" />
                                <Label fx:id="lblNombreValor" />
                            </children>
                        </HBox>

                        <!-- Apellidos -->
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                            <children>
                                <Label prefWidth="120.0" style="-fx-font-weight: bold;" text="Apellidos:" />
                                <Label fx:id="lblApellidosValor" />
                            </children>
                        </HBox>

                        <!-- Email -->
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                            <children>
                                <Label prefWidth="120.0" style="-fx-font-weight: bold;" text="Email:" />
                                <Label fx:id="lblEmailValor" />
                            </children>
                        </HBox>

                        <!-- Cargo -->
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                            <children>
                                <Label prefWidth="120.0" style="-fx-font-weight: bold;" text="Cargo:" />
                                <Label fx:id="lblCargoValor" />
                            </children>
                        </HBox>

                        <!-- Numero de pacientes -->
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                            <children>
                                <Label prefWidth="120.0" style="-fx-font-weight: bold;" text="Pacientes:" />
                                <Label fx:id="lblNumPacientesValor" />
                            </children>
                        </HBox>
                    </children>
                </VBox>
            </children>
        </HBox>

        <Separator />

        <!-- Botones -->
        <HBox alignment="CENTER" spacing="15.0">
            <children>
                <Button fx:id="btnCambiarContrasena" onAction="#cambiarContrasena" prefWidth="150.0" text="Cambiar contraseÃ±a" />
                <Button fx:id="btnEditarPerfil" onAction="#editarPerfil" prefWidth="120.0" text="Editar perfil" />
                <Button fx:id="btnCerrar" onAction="#cerrarVentana" prefWidth="100.0" styleClass="button-primario" text="Cerrar" />
            </children>
        </HBox>
    </children>
</VBox>
