<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="bdpPrincipal" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="750.0" prefWidth="950.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.javafx.Interface.controladorVentanaPrincipal">

    <top>
        <HBox alignment="CENTER" prefHeight="60.0" prefWidth="200.0" spacing="10.0" styleClass="top-bar" BorderPane.alignment="CENTER_LEFT">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <children>
                <VBox alignment="CENTER" prefHeight="58.0" prefWidth="113.0">
                    <children>
                        <ImageView fx:id="imgLogoStage" fitHeight="55.0" fitWidth="78.0" nodeOrientation="INHERIT" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@RehabiAPPLogoNoLetras.png" />
                            </image>
                            <VBox.margin>
                                <Insets />
                            </VBox.margin>
                        </ImageView>
                        <Label fx:id="lblSlogan" alignment="CENTER" text="&quot;Mejora a tu ritmo&quot;" textAlignment="CENTER" />
                    </children>
                    <HBox.margin>
                        <Insets right="10.0" />
                    </HBox.margin>
                </VBox>

                <VBox prefHeight="119.0" prefWidth="430.0">
                    <children>
                        <Label fx:id="lblBuscarRapido" text="Buscar citas por fecha o paciente:">
                            <VBox.margin>
                                <Insets bottom="5.0" />
                            </VBox.margin></Label>
                        <HBox prefHeight="49.0" prefWidth="391.0">
                            <children>
                                <Button fx:id="btnBuscar" mnemonicParsing="false" onAction="#busquedaRapida" prefHeight="42.0" prefWidth="50.0" styleClass="button-icono">
                                    <graphic>
                                        <ImageView fitHeight="31.0" fitWidth="27.0" pickOnBounds="true" preserveRatio="true">
                                            <image>
                                                <Image url="@buscar.png" />
                                            </image>
                                        </ImageView>
                                    </graphic>
                                    <tooltip>
                                        <Tooltip text="Buscar citas" />
                                    </tooltip>
                                </Button>
                                <TextField fx:id="txfBusquedaRapida" minHeight="25.0" prefHeight="42.0" prefWidth="360.0" promptText="Fecha (dd/MM/yyyy) o nombre de paciente..." />
                            </children>
                        </HBox>
                    </children>
                </VBox>

                <Button fx:id="btnPerfil" mnemonicParsing="false" onAction="#abrirVentanaPerfil" prefHeight="58.0" prefWidth="113.0" styleClass="button-icono">
                    <graphic>
                        <ImageView fitHeight="52.0" fitWidth="90.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@iconoUser.png" />
                            </image>
                        </ImageView>
                    </graphic>
                    <HBox.margin>
                        <Insets left="10.0" top="10.0" />
                    </HBox.margin>
                    <tooltip>
                        <Tooltip text="Perfil" />
                    </tooltip>
                </Button>
            </children>
        </HBox>
    </top>

    <left>
        <VBox alignment="CENTER" prefHeight="658.0" prefWidth="245.0" spacing="5.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <children>
                <VBox alignment="CENTER" prefHeight="191.0" prefWidth="179.0" spacing="15.0" styleClass="user-info-panel">
                    <padding>
                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                    </padding>
                    <children>
                        <Label fx:id="lblNombreUsuario" text="Usuario:">
                            <VBox.margin>
                                <Insets />
                            </VBox.margin>
                        </Label>
                        <Label fx:id="lblNombreTemporal" text="&quot;Nombre&quot;" />
                        <Label fx:id="lblCargo" text="Cargo:" />
                        <Label fx:id="lblCargoTemporal" text="&quot;El cargo&quot;" />
                    </children>
                </VBox>
                <Button fx:id="btnPestaniaCitas" mnemonicParsing="false" onAction="#abrirPestaniaCitas" prefHeight="60.0" prefWidth="225.0" text="Citas" />
                <Button fx:id="btnPestaniaPacientes" mnemonicParsing="false" onAction="#abrirPestaniaPacientes" prefHeight="60.0" prefWidth="225.0" text="Pacientes" />
                <Button fx:id="btnPestaniaSanitarios" mnemonicParsing="false" onAction="#abrirPestaniaSanitarios" prefHeight="60.0" prefWidth="225.0" text="Sanitarios" />
                <Button fx:id="btnPestaniaAyuda" mnemonicParsing="false" onAction="#abrirPestaniaAyuda" prefHeight="60.0" prefWidth="225.0" text="Ayuda">
                    <VBox.margin>
                        <Insets />
                    </VBox.margin></Button>
                <HBox alignment="BOTTOM_CENTER" prefHeight="273.0" prefWidth="179.0" VBox.vgrow="ALWAYS">
                    <children>
                        <Button fx:id="btnAjustes" mnemonicParsing="false" onAction="#abrirVentanaOpciones" styleClass="button-icono">
                            <tooltip>
                                <Tooltip text="Ajustes" />
                            </tooltip>
                            <graphic>
                                <ImageView fx:id="imgAjustes" fitHeight="28.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@iconoAjustes.png" />
                                    </image>
                                </ImageView>
                            </graphic>
                            <HBox.margin>
                                <Insets right="10.0" />
                            </HBox.margin></Button>
                        <Button fx:id="btnSalir" mnemonicParsing="false" onAction="#cerrarSesion" styleClass="button-peligro">
                            <tooltip>
                                <Tooltip text="Salir" />
                            </tooltip>
                            <graphic>
                                <ImageView fx:id="imgSalir" fitHeight="34.0" fitWidth="26.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@iconoSalir.png" />
                                    </image>
                                </ImageView>
                            </graphic></Button>
                    </children>
                </HBox>
            </children>
        </VBox>
    </left>

    <center>
        <VBox fx:id="vboxContenidoPrincipal" alignment="TOP_CENTER" maxHeight="Infinity" maxWidth="Infinity" spacing="10.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </padding>
            <children>
                <ImageView fx:id="imgFotoLogoCompletoStage" fitHeight="467.0" fitWidth="463.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@RehabiAPPLogo%20-%20Editada.png" />
                    </image>
                    <VBox.margin>
                        <Insets top="50.0" />
                    </VBox.margin>
                </ImageView>
            </children>
        </VBox>
    </center>

</BorderPane>
