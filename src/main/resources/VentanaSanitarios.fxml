<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="vboxContenedorPrincipal" maxHeight="Infinity" maxWidth="Infinity" spacing="15.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.javafx.Interface.controladorVentanaSanitarios">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <HBox prefHeight="100.0" prefWidth="200.0">
            <children>
                <Label fx:id="lblTituloPestania" prefHeight="18.0" prefWidth="200.0" styleClass="label-titulo" text="Sanitarios" />
                <VBox prefHeight="100.0" prefWidth="802.0" HBox.hgrow="ALWAYS">
                    <children>
                        <Button fx:id="btnSeleccionarTodo" mnemonicParsing="false" onAction="#seleccionarTodosSanitarios" text="Seleccionar todo">
                            <VBox.margin>
                                <Insets bottom="20.0" left="150.0" />
                            </VBox.margin>
                        </Button>
                        <HBox alignment="CENTER_LEFT" prefHeight="74.0" prefWidth="103.0">
                            <children>
                                <Label fx:id="lblBuscarSanitarios" text="Buscar:">
                                    <HBox.margin>
                                        <Insets right="10.0" />
                                    </HBox.margin>
                                </Label>
                                <Button fx:id="btnBuscarSanitarios" mnemonicParsing="false" onAction="#buscarSanitarios" prefHeight="30.0" prefWidth="30.0" styleClass="button-icono">
                                    <graphic>
                                        <ImageView fitHeight="18.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
                                            <image>
                                                <Image url="@buscar.png" />
                                            </image>
                                        </ImageView>
                                    </graphic>
                                    <tooltip>
                                        <Tooltip text="Buscar" />
                                    </tooltip>
                                </Button>
                                <TextField fx:id="txfBuscarSanitarios" onAction="#buscarSanitarios" prefHeight="30.0" prefWidth="250.0" promptText="Buscar:">
                                    <padding>
                                        <Insets left="5.0" right="10.0" />
                                    </padding>
                                    <HBox.margin>
                                        <Insets right="50.0" />
                                    </HBox.margin>
                                </TextField>
                                <Button fx:id="btnAnadirSanitario" mnemonicParsing="false" onAction="#abrirFormularioNuevoSanitario" prefHeight="40.0" prefWidth="40.0" styleClass="button-primario">
                                    <graphic>
                                        <ImageView fitHeight="18.0" fitWidth="74.0" pickOnBounds="true" preserveRatio="true">
                                            <image>
                                                <Image url="@iconoAgregar.png" />
                                            </image>
                                        </ImageView>
                                    </graphic>
                                    <tooltip>
                                        <Tooltip text="AÃ±adir nuevo sanitario" />
                                    </tooltip>
                                    <HBox.margin>
                                        <Insets right="20.0" />
                                    </HBox.margin>
                                </Button>
                                <Button fx:id="btnFiltrarSanitarios" mnemonicParsing="false" onAction="#abrirFiltrosSanitarios" prefHeight="40.0" prefWidth="40.0" styleClass="button-icono">
                                    <graphic>
                                        <ImageView fitHeight="18.0" fitWidth="113.0" pickOnBounds="true" preserveRatio="true">
                                            <image>
                                                <Image url="@iconoFiltrar.png" />
                                            </image>
                                        </ImageView>
                                    </graphic>
                                    <tooltip>
                                        <Tooltip text="Filtrar resultados" />
                                    </tooltip>
                                </Button>
                            </children>
                        </HBox>
                    </children>
                </VBox>
            </children>
        </HBox>

        <HBox alignment="TOP_CENTER" spacing="10.0" VBox.vgrow="ALWAYS">
            <children>
                <TableView fx:id="tblSanitarios" maxHeight="Infinity" maxWidth="Infinity" HBox.hgrow="ALWAYS" prefHeight="479.0">
                    <columns>
                        <TableColumn fx:id="colNombre" prefWidth="200.0" text="Nombre" />
                        <TableColumn fx:id="colApellidos" prefWidth="250.0" text="Apellidos" />
                        <TableColumn fx:id="colDNI" prefWidth="120.0" text="DNI" />
                        <TableColumn fx:id="colCargo" prefWidth="180.0" text="Cargo" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
            </children>
        </HBox>

        <HBox alignment="CENTER_RIGHT" prefHeight="50.0" prefWidth="200.0" spacing="10.0">
            <children>
                <Button fx:id="btnGenerarPDFSanitarios" mnemonicParsing="false" onAction="#generarInformeSanitarios" prefHeight="26.0" prefWidth="180.0" styleClass="button-secundario" text="Generar Listado PDF">
                    <tooltip>
                        <Tooltip text="Generar informe PDF de todos los sanitarios" />
                    </tooltip>
                </Button>
                <Button fx:id="btnEliminarSanitario" mnemonicParsing="false" onAction="#eliminarSanitarioSeleccionado" prefHeight="26.0" prefWidth="126.0" styleClass="button-peligro" text="Eliminar" textAlignment="CENTER" />
                <Button fx:id="btnAbrirSanitario" mnemonicParsing="false" onAction="#abrirFichaSanitario" prefHeight="26.0" prefWidth="126.0" styleClass="button-primario" text="Abrir" />
            </children>
        </HBox>
    </children>
</VBox>